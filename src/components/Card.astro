---
const { title, description, image, } = Astro.props;
---

<div class="bg-white border border-black rounded-2xl shadow-black shadow-[4px_6px_0_0_rgba(0,0,0,1)] overflow-hidden max-w-sm transform hover:scale-105 transition-transform">
    {image && (
      <img src={image} alt={title} class="w-full h-48 object-cover" />
    )}
    <div class="p-4">
      <h3 class="text-xl font-bold text-grape-dark mb-2">{title}</h3>
      <p class="text-gray-600">{description}</p>
    </div>
  </div>